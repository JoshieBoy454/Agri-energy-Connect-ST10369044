@model IEnumerable<Agri_energy_Connect_ST10369044.Models.Products>
@{
    ViewData["Title"] = "My Products";
    Layout = "_Layout";
}

<div class="container py-4">
    <div class="card bg-white shadow-sm slide-down">
        <div class="card-body p-4">
            <h2 class="mb-4 text-success fw-bold">My Products</h2>

            <div class="row g-4">
                @foreach (var p in Model)
                {
                <div class="col-12 col-sm-6 col-lg-4 col-xl-3">
                    <div class="card h-100 shadow-sm border-0 bg-success">
                        <div class="card-body d-flex flex-column align-items-center text-white">

                            <!-- image circle -->
                            <div class="rounded-circle bg-light mb-3"
                                    style="
                    width:60px;
                    height:60px;
                    background-size:cover;
                    background-position:center;
                    @(
                        p.pPictureData != null
                        ? $"background-image:url('data:{p.pPictureMimeType};base64,{Convert.ToBase64String(p.pPictureData)}')"
                        : ""
                    )">
                            </div>

                            <h5 class="card-title text-center">@p.pName</h5>
                            <p class="card-text small mb-1">
                                <strong>Category:</strong> @p.pCategory
                            </p>
                            <p class="card-text small text-white-50 mb-3">
								<strong>Date:</strong> @p.pProductionDate.ToString("dd-MM-yyyy")
                            </p>
                        </div>
                    </div>
                </div>
                }
            </div>

            @if (!Model.Any())
            {
                <div class="alert alert-info mt-4">
                    You have no products yet.
                </div>
            }
        </div>
    </div>
</div>