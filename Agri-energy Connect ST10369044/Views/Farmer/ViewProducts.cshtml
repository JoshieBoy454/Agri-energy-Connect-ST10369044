@model IEnumerable<Agri_energy_Connect_ST10369044.Models.Products>
@{
    ViewData["Title"] = "My Products";
}

<h2 class="mb-4">My Products</h2>

@if (!Model.Any())
{
    <div class="alert alert-info">
        You have no products yet. <a asp-action="AddProducts" class="alert-link">Add one now</a>.
    </div>
}
else
{
    <div class="row g-4">
        @foreach (var p in Model)
        {
            <div class="col-sm-6 col-md-4">
                <div class="card h-100">
                    @if (p.pPictureData != null && p.pPictureData.Length > 0)
                    {
                        <img class="card-img-top"
                             src="data:@p.pPictureMimeType;base64,@Convert.ToBase64String(p.pPictureData)"
                             alt="@p.pName" />
                    }
                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title">@p.pName</h5>
                        <p class="card-text mb-1"><strong>Category:</strong> @p.pCategory</p>
                        <p class="card-text mb-3"><strong>Date:</strong> @p.pProductionDate:d</p>
                    </div>
                </div>
            </div>
        }
    </div>
}