@model AddFarmerViewModel

@{
    ViewData["Title"] = "Add Farmer";
    Layout = "_Layout";
}

<div class="d-flex flex-column vh-100" style="background-color:#DFDFDF;">
    <div class="flex-fill d-flex align-items-center justify-content-center">
        <div class="card p-4 shadow slide-down" style="min-width:400px; max-width:500px;">

            <h3 class="text-center mb-4"
                style="color:#EC8316; font-weight:800; font-size:2rem;">
                Add Farmer
            </h3>

            <form asp-action="AddFarmers" asp-controller="Employee" method="post" novalidate class="mt-3">
                @Html.AntiForgeryToken()
                <div asp-validation-summary="All" class="text-danger mb-3"></div>

                <div class="mb-3">
                    <div style="
              background-color:#EC8316;
              display:inline-block;
              padding:0.25rem 0.5rem;
              border-radius:4px;
              font-weight:600;">
                        <label asp-for="Email" class="form-label mb-0 text-white">
                            Email address
                        </label>
                    </div>
                    <input asp-for="Email"
                           class="form-control mt-2"
                           placeholder="eg@example.com"
                           style="background:#DFDFDF; color:#000; border:none;" />
                    <span asp-validation-for="Email" class="text-danger small"></span>
                </div>

                <div class="mb-3">
                    <div style="
              background-color:#EC8316;
              display:inline-block;
              padding:0.25rem 0.5rem;
              border-radius:4px;
              font-weight:600;">
                        <label asp-for="Name" class="form-label mb-0 text-white">
                            First Name
                        </label>
                    </div>
                    <input asp-for="Name"
                           class="form-control mt-2"
                           placeholder="John"
                           style="background:#DFDFDF; color:#000; border:none;" />
                    <span asp-validation-for="Name" class="text-danger small"></span>
                </div>

                <div class="mb-3">
                    <div style="
              background-color:#EC8316;
              display:inline-block;
              padding:0.25rem 0.5rem;
              border-radius:4px;
              font-weight:600;">
                        <label asp-for="Surname" class="form-label mb-0 text-white">
                            Last Name
                        </label>
                    </div>
                    <input asp-for="Surname"
                           class="form-control mt-2"
                           placeholder="Doe"
                           style="background:#DFDFDF; color:#000; border:none;" />
                    <span asp-validation-for="Surname" class="text-danger small"></span>
                </div>

                <div class="mb-4">
                    <div style="
              background-color:#EC8316;
              display:inline-block;
              padding:0.25rem 0.5rem;
              border-radius:4px;
              font-weight:600;">
                        <label asp-for="Password" class="form-label mb-0 text-white">
                            Password
                        </label>
                    </div>
                    <input asp-for="Password"
                           type="password"
                           class="form-control mt-2"
                           placeholder="••••••••"
                           style="background:#DFDFDF; color:#000; border:none;" />
                    <span asp-validation-for="Password" class="text-danger small"></span>
                </div>

                <div class="d-flex justify-content-between">
                    <button type="submit"
                            class="btn btn-raise flex-fill me-2"
                            style="background-color:#EC8316; color:#FFFFFF; font-weight:600;">
                        Create Farmer
                    </button>
                    <a asp-action="EmployeesHome" asp-controller="Employee"
                       class="btn btn-raise flex-fill ms-2"
                       style="background-color:#00723A; color:#FFFFFF; font-weight:600;">
                        Cancel
                    </a>
                </div>
            </form>

        </div>
    </div>
</div>