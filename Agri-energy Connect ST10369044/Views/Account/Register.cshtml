@model RegisterViewModel

@{
    ViewData["Title"] = "Register";
    Layout = "_Layout";
}

<div class="d-flex flex-column vh-100" style="background-color:#DFDFDF;">
    <div class="flex-fill d-flex align-items-center justify-content-center">
        <div class="card p-4 shadow slide-down" style="min-width: 400px; max-width: 500px;">

            <div class="text-center mb-3">
                <img src="~/Images/Picture1.png"
                     alt="Agri-Energy Connect Logo"
                     style="max-width:100px; height:auto;" />
            </div>

            <h3 class="text-center mb-4"
                style="color:#EC8316; font-weight:800; font-size:2.5rem;">
                Register
            </h3>

            <form asp-action="Register" asp-controller= "Account" method="post" novalidate class="mt-4">
                @Html.AntiForgeryToken()

                <div class="mb-3">
                    <div style="
                    background-color:#EC8316;
                    display:inline-block;
                    padding:0.25rem 0.5rem;
                    border-radius:4px;
                    font-weight: 600;">
                        <label asp-for="Email" class="form-label mb-0" style="color:#fff;">
                            Email address
                        </label>
                    </div>
                    <input asp-for="Email"
                           class="form-control mt-2"
                           placeholder="eg@example.com"
                           style="background:#DFDFDF; color:#000; border:none;" />
                    <span asp-validation-for="Email" class="text-danger small"></span>
                </div>

                <div class="mb-3">
                    <div style="
                    background-color:#EC8316;
                    display:inline-block;
                    padding:0.25rem 0.5rem;
                    border-radius:4px;
                    font-weight: 600;">
                        <label asp-for="Name" class="form-label mb-0" style="color:#fff;">
                            First Name
                        </label>
                    </div>
                    <input asp-for="Name"
                           class="form-control mt-2"
                           placeholder="John"
                           style="background:#DFDFDF; color:#000; border:none;" />
                    <span asp-validation-for="Name" class="text-danger small"></span>
                </div>

                <div class="mb-3">
                    <div style="
                    background-color:#EC8316;
                    display:inline-block;
                    padding:0.25rem 0.5rem;
                    border-radius:4px;
                    font-weight: 600;">
                        <label asp-for="Surname" class="form-label mb-0" style="color:#fff;">
                            Last Name
                        </label>
                    </div>
                    <input asp-for="Surname"
                           class="form-control mt-2"
                           placeholder="Doe"
                           style="background:#DFDFDF; color:#000; border:none;" />
                    <span asp-validation-for="Surname" class="text-danger small"></span>
                </div>

                <div class="mb-3">
                    <div style="
                    background-color:#EC8316;
                    display:inline-block;
                    padding:0.25rem 0.5rem;
                    border-radius:4px;
                    font-weight: 600;">
                        <label asp-for="Password" class="form-label mb-0" style="color:#fff;">
                            Password
                        </label>
                    </div>
                    <input asp-for="Password"
                           type="password"
                           class="form-control mt-2"
                           placeholder="••••••••"
                           style="background:#DFDFDF; 
                           color:#000; 
                           border:none;" />
                    <span asp-validation-for="Password" class="text-danger small"></span>
                </div>

                <div class="mb-4">
                    <div style="
                    background-color:#EC8316;
                    display:inline-block;
                    padding:0.25rem 0.5rem;
                    border-radius:4px;
                    font-weight: 600;">
                        <label asp-for="PasswordConfirmation" class="form-label mb-0" style="color:#fff;">
                            Confirm Password
                        </label>
                    </div>
                    <input asp-for="PasswordConfirmation"
                           type="password"
                           class="form-control mt-2"
                           placeholder="••••••••"
                           style="background:#DFDFDF; 
                           color:#000; 
                           border:none;" />
                    <span asp-validation-for="PasswordConfirmation" class="text-danger small"></span>
                </div>

                <div class="d-flex justify-content-between">

                    <button type="submit"
                            class="btn btn-raise"
                            style="
                            background-color:#EC8316;
                            color:#FFFFFF;
                            flex:1;
                            margin-right:0.5rem;
                            font-weight: 600;">
                        Register
                    </button>

                    <a asp-action="Login" asp-controller="Account"
                            class="btn btn-raise"
                            style="
                            background-color:#00723A;
                            color:#FFFFFF;
                            flex:1;
                            margin-left:0.5rem;
                            font-weight: 600;">
                        Login
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>