@model LoginViewModel

@{
    ViewData["Title"] = "Login";
    Layout = "_Layout";
}

<div class="d-flex flex-column vh-100" style="background-color:#DFDFDF;">
    <div class="flex-fill d-flex align-items-center justify-content-center">
        <div class="card p-4 shadow" style="min-width: 400px; max-width: 500px; min-height: 500px; max-height: 800px;">

            <div class="text-center mb-3">
                <img src="~/Images/Picture1.png"
                     alt="Agri-Energy Connect Logo"
                     style="max-width:100px; height:auto;" />
            </div>
            <!-- Login Header -->
            <h3 class="text-center mb-4"
                style="color:#00723A; font-weight:800; font-size:2.5rem;">
                Login
            </h3>

            <form asp-action="Login" asp-controller= "Account" method="post" novalidate class="mt-4">
                @Html.AntiForgeryToken()
                <div asp-validation-summary="All" class="text-danger mb-3"></div>

                <!-- Email Label Box -->
                <div class="mb-2">
                    <div style="
                        background-color:#00723A;
                        display:inline-block;
                        padding:0.25rem 0.5rem;
                        border-radius:4px;">
                        <label asp-for="Email" class="form-label mb-0" style="color:#FFFFFF;">
                            Email address
                        </label>
                    </div>
                </div>
                <!-- Email Input -->
                <div class="mb-4">
                    <input asp-for="Email"
                           class="form-control"
                           placeholder="eg@example.com"
                           style="
                               background-color:#DFDFDF;
                               color:#000000;
                               border:none;"/>
                    <span asp-validation-for="Email" class="text-danger small"></span>
                </div>

                <!-- Password Label Box -->
                <div class="mb-2">
                    <div style="
                        background-color:#00723A;
                        display:inline-block;
                        padding:0.25rem 0.5rem;
                        border-radius:4px;">
                        <label asp-for="Password" class="form-label mb-0" style="color:#FFFFFF;">
                            Password
                        </label>
                    </div>
                </div>
                <!-- Password Input -->
                <div class="mb-4">
                    <input asp-for="Password"
                           type="password"
                           class="form-control"
                           placeholder="••••••••"
                           style="
                               background-color:#DFDFDF;
                               color:#000000;
                               border:none;"/>
                    <span asp-validation-for="Password" class="text-danger small"></span>
                </div>

                <div class="d-flex justify-content-between">
                    <!-- Login Button -->
                    <button type="submit"
                            class="btn"
                            style="
                                background-color:#00723A;
                                color:#FFFFFF;
                                flex:1;
                                margin-right:0.5rem;">
                        Log In
                    </button>
                    <!-- Register Button -->
                    <a asp-action="Register" asp-controller="Home"
                        class="btn"
                        style="
                          background-color:#EC8316;
                            color:#FFFFFF;
                            flex:1;
                            margin-left:0.5rem;">
                        Register
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>